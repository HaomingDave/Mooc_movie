extends ../layout

block content
  .container
    .row
        .col-md-7
          embed(src=movie.flash, allowFullScreen='true',quility='high',width='720', high='600', align='middle', type="application/x-shockwave-flash")
        .col-md-5
          dl.row
            dt.col-sm-3 电影名称
            dd.col-sm-7= movie.title
            dt.col-sm-3 导演
            dd.col-sm-7= movie.doctor
            dt.col-sm-3 国家
            dd.col-sm-7= movie.country
            dt.col-sm-3 语言
            dd.col-sm-7= movie.language
            dt.col-sm-3 上映年份
            dd.col-sm-7= movie.year
            dt.col-sm-3 简介
            dd.col-sm-7= movie.summary